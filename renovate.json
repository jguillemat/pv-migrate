{
  "extends": [
    "config:base",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeDigest",
    ":disableDependencyDashboard"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "go packages"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "docker images"
    },
    {
      "extends": [
        ":automergeMajor"
      ],
      "matchPaths": [
        ".github/workflows/**"
      ],
      "groupName": "github actions"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "# renovate: golangci-lint\\s+version: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": [
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "# renovate: goreleaser\\s+version: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "goreleaser/goreleaser",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": [
        "go.mod",
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "// renovate: go\\s+go (?<currentValue>\\d+\\.\\d+)",
        "# renovate: go\\s+go-version: (?<currentValue>\\d+\\.\\d+)"
      ],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^go(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ]
}
