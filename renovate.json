{
  "extends": [
    "config:base",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeDigest",
    ":semanticCommitTypeAll(chore)"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "go packages"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "docker images"
    },
    {
      "extends": [
        ":automergeMajor"
      ],
      "matchPaths": [
        ".github/workflows/**"
      ],
      "groupName": "github actions"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>[^\\s]+)( datasource=(?<datasource>[^\\s]+))?( registryUrl=(?<registryUrl>\\S+))?\\n[^\\n]*?(?<version>v?\\d+\\.\\d+\\.\\d+(-[\\S]+)?)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-tags{{/if}}",
      "versioningTemplate": "semver"
    }
  ]
}
